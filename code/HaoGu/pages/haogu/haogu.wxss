/* pages/haogu/haogu.wxss */

.list_item {
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100%;
  background-color: #fff;
}

.list_item .item_title {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  align-items: center;
}

.list_item .item_title image {
  position: relative;
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}

.list_item .item_title_name {
  position: relative;
  margin-left: 10rpx;
}

.list_item .item_desp {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  align-items: center;
  justify-content: space-between;
}

.list_item .item_group {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.list_item .item_group_line {
  position: absolute;
  width: 1px;
}

.list_item .item_stock {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.list_item .item_stock text {
  width: 100%;
  text-align: center;
  margin: 2rpx;
}
