/* pages/haogu/haogu.wxss */

.list_item {
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100%;
  background-color: #fff;
  margin-bottom: 14rpx;
}

.list_item .item_title {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  align-items: center;
}

.list_item .item_title image {
  position: relative;
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}

.list_item .item_title_name {
  position: relative;
  margin-left: 10rpx;
}

.list_item .item_title_time {
  position: absolute;
  right: 20rpx;
  top: 40rpx;
}

.list_item .item_desp {
  width: 100%;
  height: 52rpx;
  align-items: center;
  justify-content: center;
  padding-left: 20rpx;
}

.list_item .item_stock {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.list_item .item_stock text{
    width: 25%;
    text-align: center;
}

.list_item .item_stock_line {
    position: absolute;
    top: 152rpx;
    bottom: 20rpx;
    width: 1px;
}