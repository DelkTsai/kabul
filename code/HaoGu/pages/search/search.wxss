/* pages/search/search.wxss */
@import "../common/SearchBar/SearchBar.wxss";

.search {
  position: relative;
  width: 630rpx;
  height: 60rpx;

  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 60rpx;
}

.prompt {
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100%;
  height: 50rpx;
}

.prompt text {
  position: absolute;
  width: 100%;
  bottom: 5rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.list_item {
  display: flex;
  flex-direction: row;
  position: relative;
  width: 100%;
  height: 115rpx;
  align-items: center;
  justify-content: space-between;
}

.item_name {
  position: relative;
  margin-left: 20rpx;
  width: 150rpx;
  /*background-color: #00ff00;*/
}

.item_code {
  position: relative;
  margin-left: 50rpx;
  width: 300rpx;
  /*background-color: #00ff00;*/
}

.item_operation {
  display: flex;
  flex-direction: column;
  position: relative;
  margin-right: 20rpx;
  width: 115rpx;
  height: 100%;
  align-items: center;
  justify-content: center;
  /*background-color: #0f0;*/
}

.item_operation image {
  position: relative;
  width: 60rpx;
  height: 60rpx;
}

.item_operation text {
  position: relative;
  margin-top: 5rpx;
}
